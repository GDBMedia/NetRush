<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/productDetailTitle"
                android:textSize="22sp"
                android:textColor="#eaeaea"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/productDetailImage"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/productDetailTitle"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lastPurchasedDate"
                android:layout_below="@+id/productDetailImage"
                android:layout_alignParentStart="true"
                android:text="Last Purchased"
                android:textColor="#eaeaea"
                android:layout_marginStart="15dp"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currentPrice"
                android:textAlignment="center"
                android:text="Current Price"
                android:textColor="#eaeaea"
                android:layout_marginEnd="15dp"
                android:textSize="22sp"
                android:layout_below="@+id/productDetailImage"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lastPurchasedDateDisplay"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/lastPurchasedDate"
                android:layout_alignStart="@+id/lastPurchasedDate"
                android:textColor="#eaeaea"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currentPriceDisplay"
                android:layout_marginEnd="10dp"
                android:layout_alignTop="@+id/lastPurchasedDateDisplay"
                android:layout_alignEnd="@+id/currentPrice"
                android:textColor="#eaeaea"
                android:textSize="14sp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

