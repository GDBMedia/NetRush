<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleOrderNum"
            android:layout_centerHorizontal="true"
            android:text="@string/enter_order_number"
            android:textColor="#eaeaea"
            android:layout_marginBottom="20dp"
            android:textSize="22sp" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/titleOrderNum"
            android:layout_height="wrap_content"
            android:id="@+id/orderNumWrapper"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">
            <android.support.design.widget.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/orderNumEditText"
                android:textColor="@color/primary_light"
                android:hint="@string/order_number"/>
        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirm"
            android:text="@string/confirm"
            android:background="@color/colorAccent"
            android:layout_below="@+id/orderNumWrapper"
            android:layout_alignEnd="@+id/orderNumWrapper"
            android:textColor="@color/white" />


    </RelativeLayout>

</android.support.v7.widget.CardView>